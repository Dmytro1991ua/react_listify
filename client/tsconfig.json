{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["vite/client", "node", "jest", "@testing-library/jest-dom", "@types/jest"],
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": ["vite.config.ts", "src/**/*.{ts,tsx}", "src/**/*.d.ts", "src/**/*.test.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["node_modules", "build", "vite.config.ts", "**/*.test.tsx"]
}
